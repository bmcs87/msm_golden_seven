<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd><%= @actor.image_url %></dd>
    </dl>
  </div>
</div>  

<p><a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger">Delete actor</a></p>

<p><a href="/actors/<%= @actor.id %>/edit" class="btn btn-primary">Edit actor</a></p>